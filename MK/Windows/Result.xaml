<Window x:Class="MK.Windows.Result"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MK.Windows"
        mc:Ignorable="d"
        Title="Result" Height="330" Width="480">
    <Grid>
        <StackPanel>
            <Label Content="Ваш результат:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="48"/>
            <Label x:Name="ResultLabel" Content="100%" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="72" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Label x:Name="EvaluationLabel" Content="Отлично" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48"/>
        </StackPanel>

    </Grid>
</Window>
